{
  "title": "Mqtt-Now",
  "uri": "/settings",
  "menu": true,
  "element": [
    {
      "name": "header",
      "type": "ACText",
      "value": "<h2>Communication settings</h2>",
      "style": "text-align:center;color:#3C3C3B;"
    },
    {
      "name": "newline",
      "type": "ACElement",
      "value": "<hr>"
    },
    {
      "name": "caption",
      "type": "ACText",
      "value": "<p>Save your credentials to connect with the central computer<br></p>",
      "style": "font-family:serif;color:#002514;text-align:center;"
    },
    {
      "name": "ip_mqttServer",
      "type": "ACInput",
      "value": "",
      "placeholder": "Example: 192.168.8.70",
      "label": "MQTT Server IP:",
      "pattern": "^(([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])\\.){3}([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])$"
    },
    {
      "name": "containerID",
      "type": "ACInput",
      "value": "",
      "placeholder": "Example: 99-999-999",
      "label": "Container ID:",
      "pattern": "^([0][1-9]|[1-9][0-9])([-])([0][0][1-9]|[1-9][0-9][0-9]|[0-9][1-9][0-9])([-])([0][0][1-9]|[1-9][0-9][0-9]|[0-9][1-9][0-9])$"
    },
    {
      "name": "esp32Type",
      "type": "ACInput",
      "value": "",
      "placeholder": "front, center or back",
      "label": "What ESP32 are you setting?",
      "pattern": "(front|back|center)"
    },
    {
      "name": "mac_address",
      "type": "ACInput",
      "value": "",
      "placeholder": "FF:FF:FF:FF:FF:FF",
      "label": "What is the MAC address of your master ESP?",
      "pattern": "^([0-9A-F]{2}[:-]){5}([0-9A-F]{2})"
    },
    {
      "name": "newline1",
      "type": "ACElement",
      "value": "<hr>"
    },
    {
      "name": "save",
      "type": "ACSubmit",
      "value": "Save",
      "uri": "/param_save"
    },
    {
      "name": "discard",
      "type": "ACSubmit",
      "value": "Discard",
      "uri": "/_ac"
    },
    {
      "name": "reset",
      "type": "ACSubmit",
      "value": "Reset",
      "uri": "/param_clear"
    }
  ]
}
